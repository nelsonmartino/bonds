generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name  String
  surname String
  email String @unique
  password String
  category Role
  portfolios Portfolio[]
}

model Bond {
  tickerUSD String @id
  tickerARG String @unique
  category  Category
  emitter Emitter
  description String
  initialValue Int
  dates DateTime[]
  amortization  Float[]
  interests Float[]
  amortCash Float[]
  interestCash  Float[]
  cashflow  Float[]
  priceUSD Float
  priceARG Float
  change  Float
  currentTir  Float
  duration  Float
  modifiedDuration  Float
  parity Float
  portfolios  Portfolio[]
  createdAt DateTime  @default(now())
  // updatedAt DateTime @updatedAt
  updatedAt DateTime
}

model Portfolio {
  id  String  @id @default(uuid())
  bond  Bond  @relation(fields:[bondTicker], references: [tickerARG])
  bondTicker  String
  user  User  @relation(fields:[userEmail], references: [email])
  userEmail  String
  qty Int
}

model Holiday {
  id  Int @id @default(autoincrement())
  date  DateTime @unique
}

enum Role {
  user
  admin
}

enum Emitter {
  corp
  cbank
  treasury
  province
}

enum Category {
  hard
  cer
  badlar
  dlinked
}