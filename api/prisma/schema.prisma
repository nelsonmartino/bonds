generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name  String
  surname String
  email String @unique
  password String
  category Role
  portfolios Portfolio[]
}

model Bond {
  tickerUSD String @id
  tickerARG String @unique
  category  String
  dates DateTime[]
  amortization  Float[]
  interests Float[]
  cashflow  Float[]
  priceUSD Float
  priceARG Float
  change  Float
  currentTir  Float
  duration  Float
  modifiedDuration  Float
  portfolios  Portfolio[]
}

model Portfolio {
  id  String  @id @default(uuid())
  bond  Bond  @relation(fields:[bondTicker], references: [tickerUSD])
  bondTicker  String
  user  User  @relation(fields:[userId], references: [id])
  userId  String
}

model Holiday {
  id  Int @id @default(autoincrement())
  date  DateTime @unique
}

enum Role {
  user
  admin
}